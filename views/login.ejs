<body>
  
  <%-include("partials/nav.ejs")%>
  
  <div class="container" id="cardContain">
  <div class="row" id="menuLayout">
  <div class="card" id="loginCard"style="width: 18rem;">
    <div class="main">
      <h3>Please Log In</h3>
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
        </div>
      </div> <hr>

      <form method="POST" action="/login">
        <div class="form-group">
          <label for="inputUsernameEmail">Email</label>
          <input type="text" class="form-control" id="inputUsernameEmail" name="username">
        </div>
        <div class="form-group">
          <label for="inputPassword">Password</label>
          <input type="password" class="form-control" id="inputPassword" name="pwd">
        </div> <br>
        <button type="submit" class="btn btn btn-primary">
          Log In
        </button>
      </form>
    
    </div>
    
  </div>
</div>
</div>

